.container{
    background-color: #d6d6d5;
    width: 100%;
    height:100%;
}
.refundBox{
    width: 100%;
    padding: 40rpx;
    overflow: hidden;
    background-color: #ffffff;
    margin: 20rpx 0;


}
.refundBoxTit{
    padding:0 40rpx;
    font-size: 28rpx;
    color: rgb(34,34,34);
    height: 60rpx;
    line-height: 60rpx;
}
.refundTitRight{
    float: right;
}
.refundTime{
    width: 32rpx;
    height: 28rpx;
    vertical-align: middle;
    margin-right: 10rpx;

}
.refundTimeTit{
    font-size: 28rpx;
    color:rgb(34,34,34)
}
.refundTimeTitDetail{
    font-size: 24rpx;
    color: rgb(153,153,153);
}
.refundTimeBox{
    padding:20rpx 40rpx 70rpx 100rpx;
    position: relative;
    height: 77rpx !important;
}
.refundTimeNumber{
    width: 36rpx;
    height: 36rpx;
    border-radius: 50%;
    color: rgb(220,220,220);
    border:2px solid rgb(220,220,220);
    text-align: center;
    line-height: 36rpx;
    font-size: 28rpx;
    position: absolute;
    top:34rpx;
    left:38rpx;
    background-color: #ffffff;
    z-index: 99;

}
.refundTimeNumberActive{
    color: #ffffff;
    background-color: #fd6759;
    border:2px solid #fd6759;
}
.refundTimeCow{
    position: absolute;
    top:66rpx;
    left:58rpx;
    width: 4rpx;
    height: 134rpx;
    background-color:  rgb(220,220,220);
    z-index: 90;
}
.refundTimeCowActive{
    background-color: #fd6759;
}
.lookHelp{
    width: 100%;
    text-align: center;
    font-size: 24rpx;
    margin-bottom: 160rpx;
    position: relative;
}
.lookHelpCow{
    height: 2rpx;
    background-color: rgb(153,153,153);
    position: absolute;
    top: 17rpx;
    left: 0;
    width: 100%;
    z-index: 20;
}
.lookHelpTit{
    width: 390rpx;
    text-align: center;
    margin: 0 auto;
    background-color: #d6d6d5;
    position: relative;
    z-index: 30;
    padding-left: 10rpx;
}
.backHelp{
    color: rgb(205,171,106);
}
.callPerson{
    color: rgb(205,171,106);
    font-size: 24rpx;
    margin-bottom: 40rpx;
    position: relative;
    padding-left: 24rpx;
}
.callPersonImg{
    width: 24rpx;
    height: 24rpx;
    position: absolute;
    top:5rpx;
    left:-10rpx;
}